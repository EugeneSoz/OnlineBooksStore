@using OnlineBooksStore.Domain.Contracts.Models.Category
@model PagedList<Book>
<div class="container-fluid">
    <div class="row no-gutters">
        <div class="col-auto">
            @await Html.PartialAsync("Categories", ViewBag.Categories as PagedList<Category>)
        </div>
        <div class="col">
            <div class="container-fluid">
                <div class="row pt-4 pb-1">
                    <div class="col text-center">
                        @await Html.PartialAsync("Pages", Model)
                    </div>
                </div>
                <div class="row pt-1 pb-1">
                    <div class="col"></div>
                    <div class="col-6 text-center form-group">
                        <input form="pageform" type="hidden"
                               name="options.searchpropertyname" value="Title" />
                        <input form="pageform" name="options.searchterm"
                               placeholder="Seach..." class="form-control" />
                    </div>
                    <div class="col">
                        <button form="pageform" class="btn btn-secondary"
                                type="submit">
                            Search
                        </button>
                    </div>
                    <div class="col"></div>
                </div>
                @foreach (var book in Model)
                {
                    <div class="row">
                        <div class="col">
                            <div class="card m-1 p-1 bg-light">
                                <div class="bg-light p-1">
                                    <h4>
                                        @book.Title
                                        <span class="badge badge-pill badge-primary"
                                              style="float:right">
                                            <small>$@book.RetailPrice</small>
                                        </span>
                                    </h4>
                                </div>
                                <form id="@book.Id" asp-action="AddToCart"
                                      asp-controller="Cart" method="post">
                                    <input type="hidden" name="Id" value="@book.Id" />
                                    <input type="hidden" name="Title"
                                           value="@book.Title" />
                                    <input type="hidden" name="RetailPrice"
                                           value="@book.RetailPrice" />
                                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                                    <span class="card-text p-1">
                                        @(book.Description ?? "(No Description Available)")
                                        <button type="submit"
                                                class="btn btn-success btn-sm"
                                                style="float:right">
                                            Add To Cart
                                        </button>
                                    </span>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>