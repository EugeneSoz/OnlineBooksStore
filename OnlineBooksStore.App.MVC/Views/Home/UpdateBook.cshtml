@model OnlineBooksStore.Domain.Contracts.Models.Books.Book

<h3 class="p-2 bg-primary text-white text-center">Update Book</h3>
<form asp-action="UpdateBook" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <select class="form-control" asp-for="CategoryId">
            @if (Model.Id == 0)
            {
                <option disabled selected>Choose Category</option>
            }
            @foreach (var category in ViewBag.Categories)
            {
                <option selected=@(Model.Category?.Id == category.Id) value="@category.Id">@category.NameEng</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Publisher"></label>
        <select class="form-control" asp-for="PublisherId">
            @if (Model.Id == 0)
            {
                <option disabled selected>Choose Publisher</option>
            }
            @foreach (var publishers in ViewBag.Publishers)
            {
                <option selected=@(Model.Publisher?.Id == publishers.Id) value="@publishers.Id">@publishers.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="PurchasePrice"></label>
        <input asp-for="PurchasePrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RetailPrice"></label>
        <input asp-for="RetailPrice" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>