@model IEnumerable<OnlineBooksStore.Domain.Contracts.Models.Books.Book>

<div class="row">
    <div class="col-1 font-weight-bold">Id</div>
    <div class="col font-weight-bold">Title</div>
    <div class="col font-weight-bold">Category</div>
    <div class="col font-weight-bold">Publisher</div>
    <div class="col font-weight-bold">Purchase Price</div>
    <div class="col font-weight-bold">Retail Price</div>
</div>
@{ int i = 0; }
<form asp-action="UpdateAll" method="post">
    @foreach (var book in Model)
    {
        <div class="row p-2">
            <div class="col-1">
                @book.Id
                <input type="hidden" name="Books[@i].Id" value="@book.Id" />
            </div>
            <div class="col">
                <input class="form-control" name="Books[@i].Title"
                       value="@book.Title" />
            </div>
            <div class="col">
                <input class="form-control" name="Books[@i].Category"
                       value="@book.Category" />
            </div>
            <div class="col">
                <input class="form-control" name="Books[@i].Publisher"
                       value="@book.Category" />
            </div>
            <div class="col text-right">
                <input class="form-control" name="Books[@i].PurchasePrice"
                       value="@book.PurchasePrice" />
            </div>
            <div class="col text-right">
                <input class="form-control" name="Books[@i].RetailPrice"
                       value="@book.RetailPrice" />
            </div>

        </div>
        i++;
    }
    <div class="text-center m-2">
        <button type="submit" class="btn btn-primary">Save All</button>
        <a asp-action="Index" class="btn btn-outline-primary">Cancel</a>
    </div>
</form>