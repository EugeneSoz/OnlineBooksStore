@layout StoreLayout

<div id="store-content">
    <EmptyStoreToolbarComponent />
    <div id="store-scrollable-content">
        <div class="card m-2">
            <div class="card-body">
                <h2 class="text-center mt-1">Шаг 1: Оформление заказа</h2>
                   
                <form>
                    <div class="form-group">
                        <label>Ваше имя</label>
                        <input type="text" class="form-control" />
                        <ValidationComponent />
                    </div>
                    <div class="form-group">
                        <label>Адрес доставки</label>
                        <input type="text" class="form-control" />
                        <ValidationComponent />
                    </div>
                    <div class="text-center mt-2">
                        <a href="@AppNavLink.Cart" class="btn btn-outline-primary">
                            Назад
                        </a>
                        <a href="@AppNavLink.Payment" class="btn btn-success ml-2">
                            Далее
                        </a>
                    </div>
                </form>                   
            </div>
        </div>

    </div>
</div>