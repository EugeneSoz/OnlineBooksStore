@layout StoreLayout

    <div id="store-content">
        <EmptyStoreToolbarComponent />
        <div id="store-scrollable-content">
            <div class="card m-2">
                <div class="card-body">
                    <h2 class="text-center mt-1">Шаг 2: Оплата</h2>

                    <form>
                        <div class="form-group">
                            <label>Номер банковской карты</label>
                            <input type="text" class="form-control" maxlength="19" />
                            <ValidationComponent />
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Укажите срок действий карты</label>
                                <input type="text" class="form-control" maxlength="5" />
                                <ValidationComponent />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Код безопасности карты</label>
                                <input type="text" class="form-control" maxlength="3" />
                                <ValidationComponent />
                            </div>
                        </div>
                        <div class="text-center mt-2">
                            <a href="@AppNavLink.Confirmation" class="btn btn-outline-primary">
                                Назад
                            </a>
                            <a href="@AppNavLink.Summary" class="btn btn-success ml-2">
                                Далее
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>