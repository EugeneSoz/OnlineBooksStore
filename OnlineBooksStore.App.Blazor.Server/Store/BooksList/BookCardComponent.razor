@if (Book != null)
{
    <div class="card shadow mb-4" style="width: 15rem;">
        <img class="card-img-top" src="" alt="Обложка книги" height="370">
        <div class="card-body" style="height: 12rem;">
            <h4 class="card-title text-primary">@Book.RetailPrice</h4>
            <h6 class="card-subtitle mb-2">@Book.Title</h6>
            <h6 class="card-text">@Book.Authors</h6>
            <p class="card-text text-warning">В наличии</p>
        </div>
        <div class="card-footer">
            <button type="button" class="btn btn-success">
                В корзину
            </button>
            <a href="@AppNavLink.Details" class="btn btn-primary ml-2">
                О книге
            </a>
        </div>
    </div>
}
