@layout StoreLayout

    <div id="store-content">
        <EmptyStoreToolbarComponent />
        <div id="store-scrollable-content">
            @if (_book != null)
            {
                <div class="card m-3">
                    <div class="card-body">
                        <div class="row no-gutters">
                            <div class="col-lg-auto">
                                <img src="" alt="Обложка книги" width="420" height="600" />
                            </div>
                            <div class="col-lg">
                                <h3>@_book.Title</h3>
                                <div class="row">
                                    <div class="col-lg">
                                        <table class="table">
                                            <tbody>
                                                <tr>
                                                    <td>Автор(ы)</td>
                                                    <td>@_book.Authors</td>
                                                </tr>
                                                <tr>
                                                    <td>Количество страниц</td>
                                                    <td>@_book.PageCount</td>
                                                </tr>
                                                <tr>
                                                    <td>Год выпуска</td>
                                                    <td>@_book.Year</td>
                                                </tr>
                                                <tr>
                                                    <td>Категория</td>
                                                    <td>@_book.CategoryName</td>
                                                </tr>

                                                <tr>
                                                    <td>Издательство</td>
                                                    <td>@_book.PublisherName</td>
                                                </tr>
                                                <tr>
                                                    <td>Язык издания</td>
                                                    <td>@_book.Language</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-lg-auto">
                                        <div class="card border-primary">
                                            <div class="card-body">
                                                <h3 class="card-title">@_book.RetailPrice</h3>
                                                <h6 class="card-subtitle text-center text-muted">В наличии</h6>
                                            </div>
                                            <div class="card-footer text-center">
                                                <a style="cursor: pointer" class="card-link" href="#">В корзину</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg">
                                        <a href="@AppNavLink.Store" class="btn btn-info">
                                            К списку книг
                                        </a>
                                    </div>
                                </div>

                                <div class="row mt-lg-5">
                                    <div class="col-lg">
                                        @_book.Description
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }

            @if (_book == null)
            {
                <h4>О данной книге информация отсутствует</h4>
            }
        </div>
    </div>