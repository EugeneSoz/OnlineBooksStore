@layout StoreLayout

    <div id="store-content">
        <EmptyStoreToolbarComponent />
        <div id="store-scrollable-content">
            <div class="card m-2">
                <div class="card-body">
                    <h2 class="text-center">Ваша корзина</h2>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Количество</th>
                                <th>Товар</th>
                                <th class="text-right">Цена</th>
                                <th class="text-right">Всего за товар</th>
                                <th class="text-center">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="5" class="text-center">
                                    Ваша корзина пуста
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="number" class="form-control-sm" style="width:5em"
                                           min="0" value="1"/>
                                </td>
                                <td>Book_1</td>
                                <td class="text-right">
                                    3 000 руб.
                                </td>
                                <td class="text-right">
                                    3 000 руб.
                                </td>
                                <td class="text-center" style="width:5em">
                                    <button class="btn btn-sm btn-danger">
                                        Удалить
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-right font-weight-bold">Всего:</td>
                                <td class="text-right font-weight-bold">
                                    {{cart.totalPrice | currency:"RUB":"symbol":"2.2-2":"ru"}}
                                </td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>

                    <div class="text-center">
                        <a href="@AppNavLink.Store" class="btn btn-primary">Продолжить покупки</a>
                        <a href="@AppNavLink.Confirmation" class="btn btn-secondary ml-2">
                            Оплатить заказ
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>