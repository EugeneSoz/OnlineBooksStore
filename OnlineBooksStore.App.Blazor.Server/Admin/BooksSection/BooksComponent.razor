
<AdminToolbarComponent IsButtonsVisible="true" Link="@AppNavLink.BookForm" />
<AdminFilterComponent Properties="@_filterProperties" />
<div class="card m-3">
    <div class="card-body">
        <table class="table table-sm table-bordered table-striped">
            <thead>
                <tr>
                    @foreach (var property in _sortingProperties)
                    {
                        <th>
                            <TableHeadComponent Property="@property" />
                        </th>}
                    <th style="width: 6rem;">Действия</th>
                </tr>
            </thead>
            <tbody>
                @if (_books == null)
                {
                    <tr>
                        <td class="text-center" colspan="4">Получение данных</td>
                    </tr>
                }
                else if (_books.Any())
                {
                    @foreach (var book in _books)
                    {
                        <tr>
                            <td>
                                @book.Id
                            </td>
                            <td>@book.Title</td>
                            <td>@book.CategoryName</td>
                            <td>@book.SubcategoryName</td>
                            <td>@book.PublisherName</td>
                            <td class="text-right">@book.RetailPrice</td>
                            <td>
                                <div class="d-inline-flex">
                                    <button type="button" class="btn btn-sm btn-warning text-white ml-1">
                                        <i class='fas fa-pencil-alt fa-lg'></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-danger ml-1">
                                        <i class='fas fa-trash-alt fa-lg'></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="text-center" colspan="4">Нет данных</td>
                    </tr>
                }
            </tbody>
        </table>

        <PaginationComponent Pagination="@_pagination" PageNumbers="@_pageNumbers" />
    </div>
</div>
