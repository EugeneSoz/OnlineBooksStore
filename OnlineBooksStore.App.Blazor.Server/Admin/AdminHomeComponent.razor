<AdminToolbarComponent IsButtonsVisible="false" />
@if (_infoMessageVisible)
{
    <div class="alert alert-info">
        {{infoMessage}}
    </div>
}


<table class="table bg-light">
    <tbody>
        <tr>
            <td>В текущий момент в базе данных содержится книги:</td>
            <td class="text-right">
                <span class="badge badge-info">500</span> шт.
            </td>
        </tr>
        <tr>
            <td>На выбор имеются категории в количестве:</td>
            <td class="text-right">
                <span class="badge badge-info">10</span> шт.
            </td>
        </tr>
        <tr>
            <td>На выбор имеются издатели в количестве:</td>
            <td class="text-right">
                <span class="badge badge-info">100</span> шт.
            </td>
        </tr>
    </tbody>
</table>

<div>
    <div class="px-2">
        <table class="table table-sm bg-light">
            <thead>
                <tr>
                    <th>Имя миграции</th>
                    <th>Статус</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

        <div>
            <div class="form-group row no-gutters">
                <label class="col-sm-3 col-form-label">Контекст базы данных:</label>
                <div class="col-sm-7">
                    <select class="form-control">
                        <option value="0">{{name}}</option>
                    </select>
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary ml-2">
                        Выбрать
                    </button>
                </div>
            </div>


            <div class="form-group row no-gutters">
                <label class="col-sm-3 col-form-label">Mиграция:</label>
                <div class="col-sm-7">
                    <select class="form-control" >
                        <option value="0">Все</option>
                    </select>
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary ml-2">
                        Применить
                    </button>
                </div>
            </div>

            <div class="form-group row no-gutters mt-4">
                <div class="col-sm-auto">
                    <button type="button" class="btn btn-primary" >
                        Заполнить базу данных
                    </button>
                    <button type="button" class="btn btn-success ml-2">
                        Заполнить базу данных (из файла)
                    </button>
                    <button type="button" class="btn btn-danger ml-2">
                        Очистить базу данных
                    </button>
                    <button type="button" class="btn btn-info ml-2">
                        Сохранить данные в файл
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>