@if (Books == null || !Books.Any())
{
    <h4>Нет связанных с данным объектом книг</h4>
}

@if (Books != null && Books.Any())
{
    <table class="table table-sm table-bordered table-striped">
        <thead class="bg-info text-white">
        <tr>
            <th>ID</th>
            <th class="w-50">Название</th>
            <th class="w-25">Авторы</th>
            <th>Цена</th>
            <th style="width: 6rem;">Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var book in Books)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Authors</td>
                <td class="text-right">@book.RetailPrice</td>
                <td>
                    <div class="d-flex flex-row justify-content-center">
                        <button type="button" class="btn btn-sm btn-info text-white ml-1"
                                tooltip="Редактировать книгу">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

