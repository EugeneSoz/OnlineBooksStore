@if (Properties != null)
{
    <div class="card m-3">
        <div class="card-body">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Поиск по</label>
                <div class="col-sm-10">
                    <select type="text" class="form-control w-50">
                        @foreach (var property in Properties)
                        {
                            <option value="@property.PropertyName">@property.DisplayedName</option>
                        }

                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Значение для поиска</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control w-50" placeholder="Введите значение" value="">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button type="button" class="btn btn-primary">Найти</button>
                    @if (_isClearButtonVisible)
                    {
                        <button type="button" class="btn btn-warning ml-2">Отменить</button>
                    }
                </div>
            </div>
        </div>
    </div>
}
