
<AdminToolbarComponent IsButtonsVisible="false" />
<div class="card m-3">
    <div class="card-body">
        <table class="table table-sm table-bordered table-striped">
            <thead>
                <tr>
                    @foreach (var property in _properties)
                    {
        <th>
            <TableHeadComponent Property="@property" />
        </th>}
                    <th style="width: 6rem;">Действия</th>
                </tr>
            </thead>
            <tbody>
                @if (_orders == null)
                {
    <tr>
        <td class="text-center" colspan="4">Получение данных</td>
    </tr>
 }
else if (_orders.Any())
{
@foreach (var order in _orders)
{
<tr>
    <td>
        @order.Id
    </td>
    <td>@order.Address</td>
    <td>@order.Lines.Count()</td>
    <td>@order.CustomerName</td>
    <td>@order.Paynent.Total</td>
    <td>
        <div class="d-inline-flex">
            <button type="button" class="btn btn-sm btn-warning text-white ml-1">
                <i class='fas fa-pencil-alt fa-lg'></i>
            </button>
            <button type="button" class="btn btn-sm btn-danger ml-1">
                <i class='fas fa-trash-alt fa-lg'></i>
            </button>
        </div>
    </td>
</tr>                } }
            else
            {
<tr>
    <td class="text-center" colspan="4">Нет данных</td>
</tr>
   }
            </tbody>
        </table>

    </div>
</div>
